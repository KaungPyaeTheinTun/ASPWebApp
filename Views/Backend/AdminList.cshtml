@model List<ASPWebApp.Models.User>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin";
}

<style>
    #adminTable,
    #adminTable th,
    #adminTable td {
        border: none !important;
        border-top: none !important;
    }

    #adminTable thead tr {
        border-bottom: 1px solid rgba(0,0,0,0.06) !important;
    }

    #adminTable tbody tr {
        transition: background 0.15s;
    }

    #adminTable tbody tr:hover {
        background: rgba(37, 99, 235, 0.04);
    }

    .table-toolbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1rem;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    #adminTable thead th {
        font-size: 0.72rem;
        font-weight: 600;
        letter-spacing: 0.07em;
        text-transform: uppercase;
        color: #9ca3af;
        padding: 0.65rem 0.75rem;
    }

    #adminTable tbody td {
        padding: 0.8rem 0.75rem;
        vertical-align: middle;
        font-size: 0.9rem;
        color: #374151;
    }

    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }
</style>

<div class="d-flex flex-column min-vh-100">
    <main class="flex-fill">
        <div class="container-fluid px-3 px-md-4 my-4">

            <div class="table-toolbar">
                <div class="d-flex align-items-center gap-2">
                    <a asp-controller="Backend" asp-action="CreateAdmin" class="btn btn-primary btn-sm d-inline-flex align-items-center gap-1">
                        <i class="bi bi-plus-circle"></i> Add Admin
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table id="adminTable" class="table table-hover w-100">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th style="width:160px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var admin in Model)
                            {
                                <tr data-id="@admin.Id">
                                    <td>@admin.Name</td>
                                    <td>@admin.Email</td>
                                    <td>
                                        <a asp-action="EditAdmin" asp-route-id="@admin.Id"
                                           class="btn btn-warning btn-sm me-1"
                                           data-bs-toggle="tooltip" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <form method="post" asp-controller="Backend" asp-action="Delete"
                                              asp-route-id="@admin.Id" class="d-inline delete-form">
                                            <input type="hidden" name="id" value="@admin.Id" />
                                            <button type="button" class="btn btn-danger btn-sm"
                                                    data-bs-toggle="tooltip" title="Delete"
                                                    onclick="showDeleteModal(this.closest('form'))">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">No admins found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <partial name="Partials/_DeleteModel" />

        </div>
    </main>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#adminTable').DataTable({
                paging: true,
                lengthChange: true,
                searching: true,
                ordering: true,
                info: true,
                autoWidth: false,
                responsive: true,   // ðŸ‘ˆ enable responsive
                pageLength: 10,
                language: {
                    paginate: { previous: "<", next: ">" }
                }
            });

            const tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
            tooltips.forEach(el => new bootstrap.Tooltip(el));
        });
    </script>
}