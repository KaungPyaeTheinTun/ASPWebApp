@model List<ASPWebApp.Models.User>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "User";
}
<style>
    /* ── Table reset — no borders ── */
    #userTable,
    #userTable th,
    #userTable td {
        border: none !important;
        border-top: none !important;
    }

    #userTable thead tr {
        border-bottom: 1px solid rgba(0,0,0,0.06) !important;
    }

    #userTable tbody tr {
        transition: background 0.15s;
    }

    #userTable tbody tr:hover {
        background: rgba(37, 99, 235, 0.04);
    }

    /* ── Toolbar ── */
    .table-toolbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1rem;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    /* ── thead label ── */
    #userTable thead th {
        font-size: 0.72rem;
        font-weight: 600;
        letter-spacing: 0.07em;
        text-transform: uppercase;
        color: #9ca3af;
        padding: 0.65rem 0.75rem;
    }

    #userTable tbody td {
        padding: 0.8rem 0.75rem;
        vertical-align: middle;
        font-size: 0.9rem;
        color: #374151;
    }
</style>
<div class="d-flex flex-column min-vh-100">

    <!-- Main Content -->
    <main class="flex-fill">
        <div class="container my-4">

            <table id="userTable" class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th width="200">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>
                                <form asp-action="Delete" method="post" class="d-inline delete-form">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="button" class="btn btn-danger btn-sm"
                                            data-bs-toggle="tooltip" data-bs-placement="top"
                                            title="Delete" onclick="showDeleteModal(this.closest('form'))">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <partial name="Partials/_DeleteModel" />

        </div>
    </main>

</div>

@section Scripts {
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <!-- Initialize DataTable with arrow pagination -->
    <script>
        $(document).ready(function () {
        $('#userTable').DataTable({
        "paging": true,
        "lengthChange": true,
        "searching": true,
        "ordering": true,
        "info": true,
        "autoWidth": false,
        "language": {
        "paginate": {
        "previous": "<i class='bi bi-chevron-left'></i>",
        "next": "<i class='bi bi-chevron-right'></i>"
        }
        }
        });
        const tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        tooltips.forEach(el => new bootstrap.Tooltip(el));
        });
    </script>
}