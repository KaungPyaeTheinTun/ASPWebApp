@model List<ASPWebApp.Models.User>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "User";
}
<style>
    #userTable,
    #userTable th,
    #userTable td {
        border: none !important;
        border-top: none !important;
    }

    #userTable thead tr {
        border-bottom: 1px solid rgba(0,0,0,0.06) !important;
    }

    #userTable tbody tr {
        transition: background 0.15s;
    }

    #userTable tbody tr:hover {
        background: rgba(37, 99, 235, 0.04);
    }

    .table-toolbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1rem;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    #userTable thead th {
        font-size: 0.72rem;
        font-weight: 600;
        letter-spacing: 0.07em;
        text-transform: uppercase;
        color: #9ca3af;
        padding: 0.65rem 0.75rem;
    }

    #userTable tbody td {
        padding: 0.8rem 0.75rem;
        vertical-align: middle;
        font-size: 0.9rem;
        color: #374151;
    }

    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }
</style>

<div class="d-flex flex-column min-vh-100">
    <main class="flex-fill">
        <div class="container-fluid px-3 px-md-4 my-4">

            <div class="table-responsive">
                <table id="userTable" class="table table-hover w-100">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th style="width:160px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>
                                    <form asp-action="Delete" method="post" class="d-inline delete-form">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <button type="button" class="btn btn-danger btn-sm"
                                                data-bs-toggle="tooltip" data-bs-placement="top"
                                                title="Delete" onclick="showDeleteModal(this.closest('form'))">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <partial name="Partials/_DeleteModel" />

        </div>
    </main>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                paging: true,
                lengthChange: true,
                searching: true,
                ordering: true,
                info: true,
                autoWidth: false,
                responsive: true,   // ðŸ‘ˆ enable responsive
                pageLength: 10,
                language: {
                    paginate: {
                        previous: "<i class='bi bi-chevron-left'></i>",
                        next: "<i class='bi bi-chevron-right'></i>"
                    }
                }
            });

            const tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
            tooltips.forEach(el => new bootstrap.Tooltip(el));
        });
    </script>
}