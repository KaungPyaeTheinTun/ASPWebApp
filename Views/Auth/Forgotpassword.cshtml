@{
    ViewData["Title"] = "Forget Password";
}
@model ASPWebApp.ViewModels.ForgotPasswordViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg">
                <div class="card-body p-4 p-md-5">
                    <h2 class="text-center mb-4">Forget Password.</h2>
                    
                    <form method="post" asp-controller="Auth" asp-action="ForgotPassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <!-- Email/Username Field -->
                        <div class="mb-3">
                            <label for="username" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person-fill"></i>
                                </span>
                                <input type="text" class="form-control" id="username" asp-for="Email" 
                                       placeholder="Enter your email address" required>
                            </div>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <a asp-action = "Login" class="text-decoration-none">Login Here.</a>
                        </div>
                        
                        <!-- Submit Button -->
                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
