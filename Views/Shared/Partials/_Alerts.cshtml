<div class="toast-container position-fixed start-50 translate-middle p-3" style="z-index: 1100; max-width: 380px;">
    @if (TempData["Success"] != null)
    {
        <div class="toast show align-items-center rounded-4 border-0 mb-3 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true" style="background-color: #1a1a1a;">
            <div class="d-flex align-items-center p-3">
                <div class="flex-shrink-0 me-3">
                    <svg class="text-success" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                    </svg>
                </div>
                <div class="flex-grow-1">
                    <div class="fw-semibold text-white" style="font-size: 0.95rem; line-height: 1.4;">
                        @TempData["Success"]
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white opacity-75" data-bs-dismiss="toast" aria-label="Close" style="font-size: 0.75rem;"></button>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="toast show align-items-center rounded-4 border-0 mb-3 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true" style="background-color: #1a1a1a;">
            <div class="d-flex align-items-center p-3">
                <div class="flex-shrink-0 me-3">
                    <svg class="text-danger" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                    </svg>
                </div>
                <div class="flex-grow-1">
                    <div class="fw-semibold text-white" style="font-size: 0.95rem; line-height: 1.4;">
                        @TempData["Error"]
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white opacity-75" data-bs-dismiss="toast" aria-label="Close" style="font-size: 0.75rem;"></button>
            </div>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="toast show align-items-center rounded-4 border-0 mb-3 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true" style="background-color: #1a1a1a;">
            <div class="d-flex align-items-center p-3">
                <div class="flex-shrink-0 me-3">
                    <svg class="text-warning" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                    </svg>
                </div>
                <div class="flex-grow-1">
                    <div class="fw-semibold text-white" style="font-size: 0.95rem; line-height: 1.4;">
                        @TempData["Warning"]
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white opacity-75" data-bs-dismiss="toast" aria-label="Close" style="font-size: 0.75rem;"></button>
            </div>
        </div>
    }
</div>