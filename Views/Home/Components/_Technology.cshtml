@model List<ASPWebApp.Models.Technology>
  
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/technology.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>
<body>
<section>
  <h2>Most Popular Platform.</h2>
  <div class="container">
    @if (Model != null && Model.Any())
    {
      foreach (var tech in Model)
      {
        <div class="card">
          <div class="card-inner" style="--clr:#fff;">
            <div class="box">
              <div class="imgBox">
                @if (!string.IsNullOrEmpty(tech.Media?.FilePath))
                {
                    <img src="@tech.Media.FilePath" alt="@tech.Name" class="tech-image" />
                }
                else
                {
                    <img src="/images/a.jpeg" alt="@tech.Name" class="tech-image" />
                }
              </div>
              <div class="icon">
                <a href="@tech.Url" class="iconBox" target="_blank">
                    <span class="material-symbols-outlined">
                        arrow_outward
                    </span>
                </a>
            </div>
            </div>
          </div>
          <div class="content">
            <div class="title-row">
              <h3>@tech.Name</h3>
              <ul>
                <li style="--clr-tag:#d3b19a;" class="branding">@tech.Category</li>
              </ul>
            </div>
            <div class="tooltip-wrapper">
              <p>@tech.Description</p>
              <span class="tooltip-text">@tech.Description</span>
            </div>
            
          </div>
        </div>
      }
  }
  else
  {
      <p>No technologies found.</p>
  }

  </div>
</section>
</body>
</html>
